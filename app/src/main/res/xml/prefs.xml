<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/settings_title_units">
        <ListPreference
            android:defaultValue="Â°C"
            android:entries="@array/temperatureUnits"
            android:entryValues="@array/temperatureUnitsValues"
            android:key="unit"
            android:title="@string/setting_tempUnits" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="temperatureInteger"
            android:title="@string/setting_showTempAsInteger" />

        <ListPreference
            android:defaultValue="mm"
            android:entries="@array/lengthUnits"
            android:entryValues="@array/lengthUnitsValues"
            android:key="lengthUnit"
            android:title="@string/setting_lengthUnits" />

        <ListPreference
            android:defaultValue="m/s"
            android:entries="@array/speedUnits"
            android:entryValues="@array/speedUnitsValues"
            android:key="speedUnit"
            android:title="@string/setting_speedUnits" />

        <ListPreference
            android:defaultValue="hPa"
            android:entries="@array/pressureUnits"
            android:entryValues="@array/pressureUnitsValues"
            android:key="pressureUnit"
            android:title="@string/setting_pressureUnits" />

        <!-- dateFormat's (ListPreference) android:defaultValue and android:entries
             are derived from entryValues dynamically in code in SettingsActivity -->
        <ListPreference
            android:entryValues="@array/dateFormatsValues"
            android:key="dateFormat"
            android:title="@string/setting_dateFormat" />

        <EditTextPreference
            android:key="dateFormatCustom"
            android:summary="@string/setting_dateFormatCustom_summary"
            android:title="@string/setting_dateFormatCustom" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_title_display">

        <ListPreference
            android:defaultValue="fresh"
            android:entries="@array/themes"
            android:entryValues="@array/themesValues"
            android:key="theme"
            android:title="@string/setting_theme" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="transparentWidget"
            android:title="@string/setting_transparent_widget" />
        <ListPreference
            android:defaultValue="arrow"
            android:entries="@array/windDirectionFormats"
            android:entryValues="@array/windDirectionFormatValues"
            android:key="windDirectionFormat"
            android:title="@string/setting_wind_direction_format" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="displayDecimalZeroes"
            android:title="@string/setting_displayDecimalZeroes" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="differentiateDaysByTint"
            android:title="@string/setting_differentiateDaysByTint" />

    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_title_data">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/refreshIntervals"
            android:entryValues="@array/refreshIntervalsValues"
            android:key="refreshInterval"
            android:title="@string/setting_refreshInterval" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="sendToApp"
            android:title="Send weather data to another app."/>

        <EditTextPreference
            android:defaultValue="de.kaffeemitkoffein.broadcast.WEATHERDATA"
            android:key="sendAction"
            android:summary="Name of intent action to be performed when sending data."
            android:title="Action" />

        <EditTextPreference
            android:defaultValue="nodomain.freeyourgadget.gadgetbridge"
            android:key="sendPackage"
            android:summary="Name of intent package to be targeted when sending data."
            android:title="Package" />

        <EditTextPreference
            android:key="apiKey"
            android:summary="@string/setting_apiKey_summary"
            android:title="@string/setting_apiKey" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_title_location">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="updateLocationAutomatically"
            android:title="@string/setting_update_location_automatically" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_title_notifications">
        <CheckBoxPreference
            android:key="@string/settings_enable_notification_key"
            android:title="@string/settings_enable_notification_title"
            android:defaultValue="false" />

        <ListPreference
            android:key="@string/settings_notification_type_key"
            android:title="@string/settings_notification_type_title"
            android:entryValues="@array/settings_notification_type_value_keys"
            android:entries="@array/settings_notification_type_value_titles"
            android:defaultValue="@string/settings_notification_type_default_value"
            android:dependency="@string/settings_enable_notification_key" />

        <CheckBoxPreference
            android:key="@string/settings_show_temperature_in_status_bar_key"
            android:title="@string/settings_show_temperature_in_status_bar_title"
            android:summary="@string/settings_show_temperature_in_status_bar_summary"
            android:defaultValue="true"
            android:dependency="@string/settings_enable_notification_key" />
    </PreferenceCategory>
</PreferenceScreen>
